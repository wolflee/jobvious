<div class="small-11 small-centered columns">
  <%= form_tag jobs_path, method: :get do %>
    <div class="row collapse show-for-small-only">
      <div class="small-10 columns">
        <%= text_field_tag :q, params[:q], placeholder: 'Find jobs' %>
      </div>
      <div class="small-2 columns">
        <%= button_tag class: 'button postfix' do %>
          <%= fa_icon "search" %>
        <% end %>
      </div>
    </div>
  <% end %>
  <h2>Recent posted jobs</h2>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th class="hide-for-small-only">Location</th>
        <th class="hide-for-small-only">Company</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td><%= job.title %><em class="show-for-small-only"> @ <%= job.location %></em></td>
          <td class="hide-for-small-only"><%= job.location %></td>
          <td class="hide-for-small-only"><%= job.company %></td>
          <td><%= link_to 'More detail', job %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate @jobs %>

<div class="small-3 small-centered columns">
  <%= link_to 'Post My Job', new_job_path, class: 'button expand round' %>
</div>
